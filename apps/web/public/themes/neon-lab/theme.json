{
  "id": "neon-lab",
  "name": "Neon Lab",
  "version": "1.0.0",
  "author": { "name": "Arinova", "id": "arinova-official" },
  "description": "A cyberpunk coding lab with neon glow. Supports 3 agents with work, rest, and collaboration zones.",
  "tags": ["cyberpunk", "neon", "pixel-art", "premium"],
  "preview": "preview.png",
  "license": "standard",

  "canvas": {
    "width": 1920,
    "height": 1080,
    "background": {
      "image": "background.png",
      "color": "0x0a0e1a"
    }
  },

  "viewport": {
    "minZoom": 0.5,
    "maxZoom": 2.0,
    "defaultZoom": 1.0,
    "panBounds": true,
    "mobile": {
      "defaultZoom": 0.6,
      "pinchToZoom": true,
      "doubleTapZoom": 1.2
    }
  },

  "layers": [
    { "id": "background",    "zIndex": 0 },
    { "id": "furniture",     "zIndex": 20 },
    { "id": "characters",    "zIndex": 30 },
    { "id": "effects",       "zIndex": 50 },
    { "id": "ui-overlay",    "zIndex": 100 }
  ],

  "zones": [
    {
      "id": "work-zone",
      "name": "WORK ZONE",
      "type": "work",
      "bounds": { "x": 1100, "y": 80, "width": 760, "height": 500 },
      "capacity": 3,
      "seats": [
        { "id": "desk-1", "x": 1500, "y": 280, "direction": "left" },
        { "id": "desk-2", "x": 1500, "y": 420, "direction": "left" },
        { "id": "desk-3", "x": 1300, "y": 350, "direction": "right" }
      ]
    },
    {
      "id": "collab-zone",
      "name": "COLLABORATION ZONE",
      "type": "meeting",
      "bounds": { "x": 60, "y": 80, "width": 700, "height": 480 },
      "capacity": 2,
      "seats": [
        { "id": "collab-1", "x": 260, "y": 300, "direction": "right" },
        { "id": "collab-2", "x": 560, "y": 300, "direction": "left" }
      ]
    },
    {
      "id": "rest-zone",
      "name": "REST ZONE",
      "type": "lounge",
      "bounds": { "x": 60, "y": 620, "width": 700, "height": 380 },
      "capacity": 2,
      "seats": [
        { "id": "rest-1", "x": 300, "y": 800, "direction": "right" },
        { "id": "rest-2", "x": 520, "y": 800, "direction": "left" }
      ]
    }
  ],

  "furniture": [],
  "effects": [],

  "characters": {
    "atlas": "",
    "frameWidth": 48,
    "frameHeight": 64,
    "anchor": { "x": 0.5, "y": 1.0 },
    "hitArea": { "type": "circle", "x": 0, "y": 0, "radius": 38 },
    "nameTag": {
      "offsetY": -68,
      "font": "12px system-ui, sans-serif",
      "color": "#00F0FF",
      "bgColor": "rgba(0,0,0,0.6)",
      "padding": { "x": 6, "y": 2 },
      "borderRadius": 4,
      "maxWidth": 100
    },
    "statusBadge": {
      "offsetX": 24,
      "offsetY": -24,
      "radius": 5,
      "colors": {
        "working": "#00FF88",
        "idle": "#FF00FF",
        "blocked": "#FF3333",
        "collaborating": "#00F0FF"
      }
    },
    "states": {
      "idle": { "prefix": "char-idle", "frames": 4, "fps": 2, "loop": true },
      "working": { "prefix": "char-working", "frames": 4, "fps": 3, "loop": true },
      "walking": { "prefix": "char-walk", "frames": 6, "fps": 8, "loop": true }
    },
    "directions": ["down", "left", "right", "up"]
  }
}
