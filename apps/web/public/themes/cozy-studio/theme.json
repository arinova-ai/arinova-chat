{
  "id": "cozy-studio",
  "name": "Cozy Studio",
  "version": "3.0",
  "author": { "name": "Arinova", "id": "arinova-official" },
  "description": "A warm 3D isometric studio with animated character and full room model.",
  "tags": ["warm", "cozy", "3d", "free"],
  "preview": "preview.png",
  "license": "standard",
  "renderer": "threejs",

  "canvas": {
    "width": 1920,
    "height": 1080,
    "background": { "image": "background-cozy.png", "color": "0x0d0d0d" }
  },
  "viewport": {
    "minZoom": 0.5, "maxZoom": 2.0, "defaultZoom": 1.0, "panBounds": true
  },
  "layers": [],
  "zones": [],
  "furniture": [],
  "effects": [],
  "characters": {
    "atlas": "mascot-sprite.png",
    "frameWidth": 256, "frameHeight": 256,
    "anchor": { "x": 0.5, "y": 1.0 },
    "hitArea": { "type": "circle", "x": 0, "y": 0, "radius": 38 },
    "nameTag": {
      "offsetY": -68, "font": "12px system-ui", "color": "#4A3728",
      "bgColor": "rgba(255,245,230,0.75)", "padding": { "x": 6, "y": 2 },
      "borderRadius": 4, "maxWidth": 100
    },
    "statusBadge": {
      "offsetX": 24, "offsetY": -24, "radius": 5,
      "colors": { "working": "#16A34A", "idle": "#F59E0B", "blocked": "#DC2626", "collaborating": "#2563EB" }
    },
    "states": {
      "idle": { "prefix": "char-idle", "frames": 1, "fps": 1, "loop": true }
    },
    "directions": ["down"]
  },

  "room": {
    "model": "cosy-studio-room.glb",
    "scale": [1, 1, 1]
  },

  "character": {
    "model": "arinova-doll-animated.glb",
    "scale": [0.3, 0.3, 0.3],
    "height": 1.6,
    "animations": {
      "idle": "idle",
      "idle_long": "idle_long",
      "walk": "walk",
      "run": "run",
      "dance": "dance",
      "swing": "swing",
      "crunch": "crunch",
      "pushup": "pushup",
      "sleeping": "sleeping",
      "fall": "fall",
      "walk_to_sit": "walk_to_sit",
      "lie_down": "lie_down",
      "pushup_to_idle": "pushup_to_idle",
      "sit_to_stand": "sit_to_stand",
      "stand_up": "stand_up"
    },
    "positions": {
      "desk": [0.8, 0, 0.3],
      "playground": [-0.8, 0, 0.8],
      "bed": [-0.5, 0, -0.8]
    }
  },

  "camera": {
    "type": "orthographic",
    "zoom": 1.5,
    "position": [4, 5, 4],
    "target": [0, -0.1, 0]
  },

  "lighting": {
    "ambient": { "color": "0xfff5e6", "intensity": 0.7 },
    "directional": { "color": "0xffffff", "intensity": 1.0, "position": [5, 8, 6] }
  },

  "quality": {
    "high": {
      "renderer": {
        "pixelRatio": 2,
        "antialias": true,
        "lighting": "full",
        "anisotropy": true
      }
    },
    "performance": {
      "renderer": {
        "pixelRatio": 1,
        "antialias": false,
        "lighting": "ambient-only",
        "anisotropy": false
      }
    }
  }
}
