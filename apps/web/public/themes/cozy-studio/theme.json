{
  "id": "cozy-studio",
  "name": "Cozy Studio",
  "version": "2.0.0",
  "author": { "name": "Arinova", "id": "arinova-official" },
  "description": "A warm 3D isometric studio with wood floors, bookshelves, and cozy furniture.",
  "tags": ["warm", "cozy", "3d", "free"],
  "preview": "preview.png",
  "license": "standard",
  "renderer": "threejs",

  "canvas": {
    "width": 1920,
    "height": 1080,
    "background": {
      "image": "background-cozy.png",
      "color": "0xf5f0e8"
    }
  },

  "viewport": {
    "minZoom": 0.5,
    "maxZoom": 2.0,
    "defaultZoom": 1.0,
    "panBounds": true,
    "mobile": {
      "defaultZoom": 0.6,
      "pinchToZoom": true,
      "doubleTapZoom": 1.2
    }
  },

  "layers": [
    { "id": "background",  "zIndex": 0 },
    { "id": "furniture",   "zIndex": 20 },
    { "id": "characters",  "zIndex": 30 },
    { "id": "effects",     "zIndex": 50 },
    { "id": "ui-overlay",  "zIndex": 100 }
  ],

  "zones": [
    {
      "id": "work-area",
      "name": "WORK AREA",
      "type": "work",
      "bounds": { "x": 1050, "y": 350, "width": 550, "height": 400 },
      "capacity": 1,
      "seats": [
        { "id": "desk-1", "x": 1350, "y": 520, "direction": "up" }
      ]
    },
    {
      "id": "lounge-area",
      "name": "LOUNGE",
      "type": "lounge",
      "bounds": { "x": 350, "y": 350, "width": 550, "height": 400 },
      "capacity": 1,
      "seats": [
        { "id": "bean-1", "x": 700, "y": 500, "direction": "down" }
      ]
    }
  ],

  "furniture": [
    {
      "id": "room-shell",
      "sprite": "/themes/cozy-studio/models/room.glb",
      "layer": "furniture",
      "x": 960, "y": 540,
      "width": 1920, "height": 1080
    },
    {
      "id": "desk",
      "sprite": "/themes/cozy-studio/models/desk.glb",
      "layer": "furniture",
      "x": 1350, "y": 420,
      "width": 660, "height": 330
    },
    {
      "id": "chair",
      "sprite": "/themes/cozy-studio/models/chair.glb",
      "layer": "furniture",
      "x": 1350, "y": 540,
      "width": 240, "height": 240
    },
    {
      "id": "monitor",
      "sprite": "/themes/cozy-studio/models/monitor.glb",
      "layer": "furniture",
      "x": 1350, "y": 410,
      "width": 300, "height": 180
    },
    {
      "id": "bookshelf",
      "sprite": "/themes/cozy-studio/models/bookshelf.glb",
      "layer": "furniture",
      "x": 600, "y": 200,
      "width": 420, "height": 300
    },
    {
      "id": "bean-bag",
      "sprite": "/themes/cozy-studio/models/bean-bag.glb",
      "layer": "furniture",
      "x": 700, "y": 500,
      "width": 420, "height": 360
    },
    {
      "id": "coffee-table",
      "sprite": "/themes/cozy-studio/models/coffee-table.glb",
      "layer": "furniture",
      "x": 850, "y": 580,
      "width": 300, "height": 300
    },
    {
      "id": "plant",
      "sprite": "/themes/cozy-studio/models/plant.glb",
      "layer": "furniture",
      "x": 400, "y": 380,
      "width": 300, "height": 540
    },
    {
      "id": "floor-lamp",
      "sprite": "/themes/cozy-studio/models/floor-lamp.glb",
      "layer": "furniture",
      "x": 350, "y": 650,
      "width": 180, "height": 780
    },
    {
      "id": "rug",
      "sprite": "/themes/cozy-studio/models/rug.glb",
      "layer": "furniture",
      "x": 900, "y": 580,
      "width": 1200, "height": 900
    },
    {
      "id": "laptop",
      "sprite": "/themes/cozy-studio/models/wall-art.glb",
      "layer": "furniture",
      "x": 1320, "y": 400,
      "width": 180, "height": 120
    },
    {
      "id": "plant-small",
      "sprite": "/themes/cozy-studio/models/plant-small.glb",
      "layer": "furniture",
      "x": 1150, "y": 380,
      "width": 150, "height": 240
    }
  ],

  "effects": [],

  "characters": {
    "atlas": "mascot-sprite.png",
    "frameWidth": 256,
    "frameHeight": 256,
    "anchor": { "x": 0.5, "y": 1.0 },
    "hitArea": { "type": "circle", "x": 0, "y": 0, "radius": 38 },
    "nameTag": {
      "offsetY": -68,
      "font": "12px system-ui, sans-serif",
      "color": "#4A3728",
      "bgColor": "rgba(255,245,230,0.75)",
      "padding": { "x": 6, "y": 2 },
      "borderRadius": 4,
      "maxWidth": 100
    },
    "statusBadge": {
      "offsetX": 24,
      "offsetY": -24,
      "radius": 5,
      "colors": {
        "working": "#16A34A",
        "idle": "#F59E0B",
        "blocked": "#DC2626",
        "collaborating": "#2563EB"
      }
    },
    "states": {
      "idle": { "prefix": "char-idle", "frames": 4, "fps": 2, "loop": true },
      "working": { "prefix": "char-working", "frames": 4, "fps": 3, "loop": true },
      "walking": { "prefix": "char-walk", "frames": 4, "fps": 8, "loop": true }
    },
    "directions": ["down", "left", "right", "up"]
  }
}
