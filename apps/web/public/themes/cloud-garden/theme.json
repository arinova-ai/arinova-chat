{
  "id": "cloud-garden",
  "name": "Cloud Garden",
  "version": "1.0.0",
  "author": { "name": "Arinova", "id": "arinova-official" },
  "description": "A dreamy watercolor floating island with 5 agent slots. Features work, rest, and collaboration gardens.",
  "tags": ["watercolor", "dream", "garden", "premium"],
  "preview": "preview.png",
  "license": "standard",

  "canvas": {
    "width": 1920,
    "height": 1080,
    "background": {
      "image": "background.png",
      "color": "0xd4e8f0"
    }
  },

  "viewport": {
    "minZoom": 0.5,
    "maxZoom": 2.0,
    "defaultZoom": 1.0,
    "panBounds": true,
    "mobile": {
      "defaultZoom": 0.6,
      "pinchToZoom": true,
      "doubleTapZoom": 1.2
    }
  },

  "layers": [
    { "id": "background",    "zIndex": 0 },
    { "id": "furniture",     "zIndex": 20 },
    { "id": "characters",    "zIndex": 30 },
    { "id": "effects",       "zIndex": 50 },
    { "id": "ui-overlay",    "zIndex": 100 }
  ],

  "zones": [
    {
      "id": "work-garden",
      "name": "WORK ZONE \ud83c\udf3a",
      "type": "work",
      "bounds": { "x": 1050, "y": 200, "width": 780, "height": 600 },
      "capacity": 3,
      "seats": [
        { "id": "mushroom-1", "x": 1300, "y": 420, "direction": "left" },
        { "id": "mushroom-2", "x": 1550, "y": 520, "direction": "left" },
        { "id": "mushroom-3", "x": 1350, "y": 640, "direction": "right" }
      ]
    },
    {
      "id": "collab-garden",
      "name": "COLLABORATION ZONE \ud83c\udf33",
      "type": "meeting",
      "bounds": { "x": 60, "y": 80, "width": 700, "height": 450 },
      "capacity": 2,
      "seats": [
        { "id": "stone-table-1", "x": 260, "y": 300, "direction": "right" },
        { "id": "stone-table-2", "x": 500, "y": 300, "direction": "left" }
      ]
    },
    {
      "id": "rest-garden",
      "name": "REST ZONE \ud83c\udf3f",
      "type": "lounge",
      "bounds": { "x": 60, "y": 580, "width": 700, "height": 420 },
      "capacity": 2,
      "seats": [
        { "id": "hammock-1", "x": 280, "y": 760, "direction": "right" },
        { "id": "hammock-2", "x": 520, "y": 820, "direction": "right" }
      ]
    }
  ],

  "furniture": [],
  "effects": [],

  "characters": {
    "atlas": "",
    "frameWidth": 48,
    "frameHeight": 64,
    "anchor": { "x": 0.5, "y": 1.0 },
    "hitArea": { "type": "circle", "x": 0, "y": 0, "radius": 38 },
    "nameTag": {
      "offsetY": -68,
      "font": "12px system-ui, sans-serif",
      "color": "#5B4A3F",
      "bgColor": "rgba(255,255,255,0.7)",
      "padding": { "x": 6, "y": 2 },
      "borderRadius": 4,
      "maxWidth": 100
    },
    "statusBadge": {
      "offsetX": 24,
      "offsetY": -24,
      "radius": 5,
      "colors": {
        "working": "#4CAF50",
        "idle": "#FFB74D",
        "blocked": "#E57373",
        "collaborating": "#64B5F6"
      }
    },
    "states": {
      "idle": { "prefix": "char-idle", "frames": 4, "fps": 2, "loop": true },
      "working": { "prefix": "char-working", "frames": 4, "fps": 3, "loop": true },
      "walking": { "prefix": "char-walk", "frames": 6, "fps": 8, "loop": true }
    },
    "directions": ["down", "left", "right", "up"]
  }
}
