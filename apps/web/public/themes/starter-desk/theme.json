{
  "id": "starter-desk",
  "name": "Starter Desk",
  "version": "1.0.0",
  "author": { "name": "Arinova", "id": "arinova-official" },
  "description": "A cozy personal workspace with the Arinova mascot. Free for all users.",
  "tags": ["warm", "cozy", "starter", "free"],
  "preview": "preview.png",
  "license": "standard",

  "canvas": {
    "width": 1920,
    "height": 1080,
    "background": {
      "image": "background.png",
      "color": "0xf5efe6"
    }
  },

  "viewport": {
    "minZoom": 0.5,
    "maxZoom": 2.0,
    "defaultZoom": 1.0,
    "panBounds": true,
    "mobile": {
      "defaultZoom": 0.6,
      "pinchToZoom": true,
      "doubleTapZoom": 1.2
    }
  },

  "layers": [
    { "id": "background",    "zIndex": 0 },
    { "id": "furniture",     "zIndex": 20 },
    { "id": "characters",    "zIndex": 30 },
    { "id": "effects",       "zIndex": 50 },
    { "id": "ui-overlay",    "zIndex": 100 }
  ],

  "zones": [
    {
      "id": "rest-area",
      "name": "REST AREA",
      "type": "lounge",
      "bounds": { "x": 60, "y": 200, "width": 800, "height": 680 },
      "capacity": 1,
      "seats": [
        { "id": "rest-1", "x": 360, "y": 580, "direction": "right" }
      ]
    },
    {
      "id": "work-area",
      "name": "WORK AREA",
      "type": "work",
      "bounds": { "x": 960, "y": 200, "width": 800, "height": 680 },
      "capacity": 1,
      "seats": [
        { "id": "desk-1", "x": 1360, "y": 580, "direction": "left" }
      ]
    }
  ],

  "furniture": [],
  "effects": [],

  "characters": {
    "atlas": "",
    "frameWidth": 48,
    "frameHeight": 64,
    "anchor": { "x": 0.5, "y": 1.0 },
    "hitArea": { "type": "circle", "x": 0, "y": 0, "radius": 38 },
    "nameTag": {
      "offsetY": -68,
      "font": "12px system-ui, sans-serif",
      "color": "#4A3728",
      "bgColor": "rgba(255,255,255,0.6)",
      "padding": { "x": 6, "y": 2 },
      "borderRadius": 4,
      "maxWidth": 100
    },
    "statusBadge": {
      "offsetX": 24,
      "offsetY": -24,
      "radius": 5,
      "colors": {
        "working": "#16A34A",
        "idle": "#F59E0B",
        "blocked": "#DC2626",
        "collaborating": "#2563EB"
      }
    },
    "states": {
      "idle": { "prefix": "char-idle", "frames": 4, "fps": 2, "loop": true },
      "working": { "prefix": "char-working", "frames": 4, "fps": 3, "loop": true },
      "walking": { "prefix": "char-walk", "frames": 6, "fps": 8, "loop": true }
    },
    "directions": ["down", "left", "right", "up"]
  }
}
