# Server
PORT=3501

# Database
DATABASE_URL=postgres://user:password@localhost:5458/arinova
REDIS_URL=redis://localhost:6381

# CORS
CORS_ORIGIN=http://localhost:3500

# Auth
BETTER_AUTH_SECRET=your-secret-key
BETTER_AUTH_URL=http://localhost:3501

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# File uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cloudflare R2 (optional - falls back to local disk)
R2_ENDPOINT=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=arinova-uploads
R2_PUBLIC_URL=

# Push notifications (optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@arinova.ai

# Admin
ADMIN_EMAILS=

# Sentry (optional)
SENTRY_DSN=
